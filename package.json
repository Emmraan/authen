{
    "name": "auth-microservice",
    "version": "1.0.0",
    "description": "A NestJS authentication microservice",
    "main": "dist/main.js",
    "engines": {
        "node": ">=22.0.0"
    },
    "private": true,
    "scripts": {
        "start": "nest start",
        "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
        "migrate:run": "node ./scripts/run-migrations.js",
        "build": "tsc -p tsconfig.build.json",
        "verify": "pnpm lint && pnpm typecheck && pnpm test && pnpm format:format && pnpm build",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "jest --runInBand --config jest.config.cjs",
        "e2e:staging": "BASE_URL=http://localhost:3000 jest --config=jest.config.cjs --runInBand --testPathPattern=./test/e2e",
        "test:watch": "jest --watch",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "prepare": "husky"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/jwt": "^9.0.0",
        "@nestjs/platform-express": "^9.0.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "dotenv": "^16.0.0",
        "jsonwebtoken": "^9.0.0",
        "reflect-metadata": "^0.1.13",
        "uuid": "^9.0.0",
        "pg": "^8.9.0"
    },
    "devDependencies": {
        "@nestjs/testing": "^11.1.12",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.0",
        "@types/node": "^18.0.0",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "eslint": "^8.50.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "prettier": "^3.8.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.4.6",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.0"
    },
    "packageManager": "pnpm@10.28.1"
}
