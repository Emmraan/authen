# App
PORT=3000
NODE_ENV=development

# JWT
JWT_ACCESS_TOKEN_SECRET=change_me_access
JWT_REFRESH_TOKEN_SECRET=change_me_refresh
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Hashing
BCRYPT_SALT_ROUNDS=12

# DB (adapter-agnostic, filled per adapter)
DB_ADAPTER=in-memory
DATABASE_URL=

# Caching
RATE_LIMIT_REDIS_URL=

# HMAC / Key management (KMS)
# Provide either HMAC_SECRETS (comma-separated, primary first) or configure KMS_PROVIDER
KMS_PROVIDER=env
HMAC_SECRETS=primary-secret,old-secret
HMAC_SECRET=

# Vault (optional, used when KMS_PROVIDER=vault)
VAULT_ADDR=
VAULT_TOKEN=
VAULT_KV_PATH=hmac/keys

# Mail / SMTP
MAIL_PROVIDER=
MAIL_DIRECT=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
FRONTEND_URL=https://app.example.com
MAIL_QUEUE_KEY=mail:queue
